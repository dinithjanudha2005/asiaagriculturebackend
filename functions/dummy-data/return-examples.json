  "returnDocumentStructure": {
    "description": "Return document structure for when a product is returned",
    "fields": {
      "id": "Auto-generated unique identifier for the return document",
      "orderId": "ID of the original order that is being returned (required)",
      "dateSent": "Date when the product was originally sent (optional, can be null)",
      "dateReturn": "Date when the product was returned (required)",
      "reason": "Reason for the return (required, min 5 chars, max 500 chars)",
      "deliverCharge": "Delivery charge amount (optional, defaults to '0')",
      "productCost": "Product cost amount (optional, defaults to '5000')",
      "status": "Status of the return (always 'returned')",
      "createdAt": "Timestamp when return document was created",
      "updatedAt": "Timestamp when return document was last updated"
    },
    "apiEndpoints": {
      "createReturn": "POST /orders/returns",
      "getAllReturns": "GET /orders/returns",
      "getReturnsByOrderId": "GET /orders/returns/order/:orderId",
      "updateReturn": "PUT /orders/returns/:returnId"
    },
    "validation": {
      "required": ["orderId", "dateReturn", "reason"],
      "optional": ["dateSent", "deliverCharge", "productCost"],
      "defaults": {
        "deliverCharge": "0",
        "productCost": "5000"
      }
    }
  }
